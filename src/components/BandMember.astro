---
import type { BandMember } from '../data/bandMembers';

interface Props {
  member: BandMember;
}

const { member } = Astro.props;
---
<div class="group h-full">
  <div class="relative overflow-hidden rounded-lg bg-black/40 backdrop-blur-sm p-6 transition-transform duration-300 transform hover:-translate-y-2 border border-white/10 h-full flex flex-col">
    <div class="relative z-10 flex flex-col flex-grow">
      <div class="text-center mb-6">
        <img 
          src={member.image} 
          alt={member.name}
          class="w-48 h-48 object-cover rounded-full mx-auto border-4 border-band-secondary shadow-xl"
        />
        <h3 class="text-2xl font-bold text-white mt-4 mb-2">{member.name}</h3>
        <p class="text-band-secondary font-semibold mb-4">{member.role}</p>
      </div>
      <p class="text-gray-300 leading-relaxed flex-grow">{member.description}</p>
    </div>
  </div>
</div>